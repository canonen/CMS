<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<context-param>
		<param-name>JdbcDriver</param-name>
		<param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcUrl</param-name>
		<param-value>jdbc:sqlserver://192.168.151.101:1433;databaseName=brite_sadm_500</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcUser</param-name>
		<param-value>revotasadm</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcPassword</param-name>
		<param-value>abs0lut</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcConnectionsMin</param-name>
		<param-value>5</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcConnectionsMax</param-name>
		<param-value>100</param-value>
	</context-param>

	<listener>
		<listener-class>
			com.britemoon.sas.ContextListener
		</listener-class>
	</listener>

	<security-constraint>
		<web-resource-collection>
		<web-resource-name>Revotas Administration</web-resource-name>
			<url-pattern>/adm/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>revotas_admin</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>Revotas Admin</realm-name>
	</login-config>
</web-app>