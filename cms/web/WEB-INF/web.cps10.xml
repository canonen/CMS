<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<context-param>
		<param-name>JdbcDriver</param-name>
		<param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcUrl</param-name>
		<param-value>jdbc:sqlserver://IPAddress;databaseName=brite_ccps_500</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcUser</param-name>
		<param-value>briteadm</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcPassword</param-name>
		<param-value>plutonium84</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcConnectionsMin</param-name>
		<param-value>5</param-value>
	</context-param>
	<context-param>
		<param-name>JdbcConnectionsMax</param-name>
		<param-value>100</param-value>
	</context-param>

	<context-param>
		<param-name>ImageURL</param-name>
		<param-value>http://cps10.britemoon.com/cctm/ui/images/</param-value>
	</context-param>
	<context-param>
		<param-name>ImagePath</param-name>
		<param-value>D:\Britemoon\cps_010\ctm\web\ui\images\</param-value>
	</context-param>
	<context-param>
		<param-name>ValidImageExtensions</param-name>
		<param-value>gif jpg jpeg</param-value>
	</context-param>
	<context-param>
		<param-name>NumCategories</param-name>
		<param-value>4</param-value>
	</context-param>
	<!-- Seperate category names with ";"-->
	<context-param>
		<param-name>CategoryList</param-name>
		<param-value>Newsletter;Promo;Letter;Postcard</param-value>
	</context-param>
	<context-param>
		<param-name>NumTemplatesPerPage</param-name>
		<param-value>6</param-value>
	</context-param>

	<listener>
		<listener-class>
			com.britemoon.cps.ContextListener
		</listener-class>
	</listener>

	<servlet>
		<servlet-name>
			campaignRequest
		</servlet-name>
		<servlet-class>
			com.britemoon.cps.que.campaignRequest
		</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>
			FTPExportScheduler
		</servlet-name>
		<servlet-class>
			com.britemoon.cps.exp.FTPExportScheduler
		</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>
			FTPImportScheduler
		</servlet-name>
		<servlet-class>
			com.britemoon.cps.upd.FTPImportScheduler
		</servlet-class>
	</servlet>

	<servlet-mapping>
	    <servlet-name>campaignRequest</servlet-name>
	    <url-pattern>/servlet/campaignRequest</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
	    <servlet-name>FTPExportScheduler</servlet-name>
	    <url-pattern>/servlet/FTPExportScheduler</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
	    <servlet-name>FTPImportScheduler</servlet-name>
	    <url-pattern>/servlet/FTPImportScheduler</url-pattern>
	</servlet-mapping>

<!-- start Axis-specific servlet settings -->
<!-- Changed the name of AxisServlet to SvcsServlet for security purposes -->
  <servlet>
    <servlet-name>AxisServlet</servlet-name>
    <display-name>Apache-Axis Servlet</display-name>
    <servlet-class>
        org.apache.axis.transport.http.AxisServlet
    </servlet-class>
  </servlet>
