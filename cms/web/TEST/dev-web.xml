<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>tr_TR</param-value>
    </context-param>



    <context-param>
        <param-name>JdbcDriver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>JdbcUrl</param-name>
        <param-value>jdbc:sqlserver://192.168.151.4:1433;databaseName=brite_ccps_500</param-value>
    </context-param>
    <context-param>
        <param-name>JdbcUser</param-name>
        <param-value>revotasadm</param-value>
    </context-param>
    <context-param>
        <param-name>JdbcPassword</param-name>
        <param-value>abs0lut</param-value>
    </context-param>
    <context-param>
        <param-name>JdbcConnectionsMin</param-name>
        <param-value>5</param-value>
    </context-param>
    <context-param>
        <param-name>JdbcConnectionsMax</param-name>
        <param-value>200</param-value>
    </context-param>

    <context-param>
        <param-name>ImageURL</param-name>
        <param-value>http://cms.revotas.com/cctm/ui/images/</param-value>
    </context-param>
    <context-param>
        <param-name>ImagePath</param-name>
        <param-value>C:\Revotas\ctm\web\ui\images\</param-value>
    </context-param>
    <context-param>
        <param-name>ValidImageExtensions</param-name>
        <param-value>png gif jpg jpeg</param-value>
    </context-param>
    <context-param>
        <param-name>NumCategories</param-name>
        <param-value>4</param-value>
    </context-param>
    <!-- Seperate category names with ";"-->
    <context-param>
        <param-name>CategoryList</param-name>
        <param-value>Newsletter;Promo;Letter;Postcard</param-value>
    </context-param>
    <context-param>
        <param-name>NumTemplatesPerPage</param-name>
        <param-value>6</param-value>
    </context-param>

    <listener>
        <listener-class>
            com.britemoon.cps.ContextListener
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>
            campaignRequest
        </servlet-name>
        <servlet-class>
            com.britemoon.cps.que.campaignRequest
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            FTPExportScheduler
        </servlet-name>
        <servlet-class>
            com.britemoon.cps.exp.FTPExportScheduler
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            FTPImportScheduler
        </servlet-name>
        <servlet-class>
            com.britemoon.cps.upd.FTPImportScheduler
        </servlet-class>
    </servlet>

    <servlet>
        <display-name>FilterJob</display-name>
        <servlet-name>FilterJob</servlet-name>
        <servlet-class>com.britemoon.cps.som.servlets.FilterJob</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FilterJob</servlet-name>
        <url-pattern>/ui/jsp/som/dofilter</url-pattern>
    </servlet-mapping>


    <servlet>
        <display-name>DoPublish</display-name>
        <servlet-name>DoPublish</servlet-name>
        <servlet-class>com.britemoon.cps.som.fb.DoPublish</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DoPublish</servlet-name>
        <url-pattern>/ui/jsp/som/DoPublish</url-pattern>
    </servlet-mapping>


    <servlet>
        <display-name>TwitterHandler</display-name>
        <servlet-name>TwitterHandler</servlet-name>
        <servlet-class>com.britemoon.cps.som.tw.TwitterHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TwitterHandler</servlet-name>
        <url-pattern>/ui/jsp/som/TwitterHandler</url-pattern>
    </servlet-mapping>


    <servlet>
        <display-name>ManageAccounts</display-name>
        <servlet-name>ManageAccounts</servlet-name>
        <servlet-class>com.britemoon.cps.som.servlets.ManageAccounts</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ManageAccounts</servlet-name>
        <url-pattern>/ui/jsp/som/ManageAccounts</url-pattern>
    </servlet-mapping>


    <servlet>
        <display-name>WebView</display-name>
        <servlet-name>WebView</servlet-name>
        <servlet-class>com.britemoon.cps.wv.WebView</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WebView</servlet-name>
        <url-pattern>/servlet/WebView</url-pattern>
    </servlet-mapping>



    <servlet>
        <display-name>ReportToPDF</display-name>
        <servlet-name>ReportToPDF</servlet-name>
        <servlet-class>com.britemoon.cps.exp.ReportToPDF</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReportToPDF</servlet-name>
        <url-pattern>/servlet/ReportToPDF</url-pattern>
    </servlet-mapping>


    <servlet>
        <display-name>campaignRequestTest</display-name>
        <servlet-name>campaignRequestTest</servlet-name>
        <servlet-class>com.britemoon.cps.que.campaignRequestTest</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>campaignRequestTest</servlet-name>
        <url-pattern>/servlet/campaignRequestTest</url-pattern>
    </servlet-mapping>



    <servlet-mapping>
        <servlet-name>campaignRequest</servlet-name>
        <url-pattern>/servlet/campaignRequest</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FTPExportScheduler</servlet-name>
        <url-pattern>/servlet/FTPExportScheduler</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FTPImportScheduler</servlet-name>
        <url-pattern>/servlet/FTPImportScheduler</url-pattern>
    </servlet-mapping>

    <!-- start Axis-specific servlet settings -->
    <!-- Changed the name of AxisServlet to SvcsServlet for security purposes -->
    <servlet>
        <servlet-name>AxisServlet</servlet-name>
        <display-name>Apache-Axis Servlet</display-name>
        <servlet-class>
            org.apache.axis.transport.http.AxisServlet
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>jersey-serlvet</servlet-name>
        <servlet-class>
            com.sun.jersey.spi.container.servlet.ServletContainer
        </servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>com.sun.jersey.spi.container.servlet.ServletContainer</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>jersey-serlvet</servlet-name>
        <url-pattern>/service/*</url-pattern>
    </servlet-mapping>




    <!--
      <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <display-name>Axis Admin Servlet</display-name>
        <servlet-class>
            org.apache.axis.transport.http.AdminServlet
        </servlet-class>
        <load-on-startup>10</load-on-startup>
      </servlet>
    -->
